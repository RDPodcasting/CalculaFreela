<div id="calcFreela" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Calculadora de hora p/ Freelas</p>
                <button id="closeCanc" class="delete" aria-label="close"></button>
            </header>
            <section class="modal-card-body">
                <!-- Content ... -->
                <div class="field has-addons has-addons-centered">
                    <label class="label is-small">
                        Tempo diário investido no projeto:
                    </label>
                    <div class="control has-icons-left has-icons-right">
                        <input id="txtTempo" class="input is-small" type="time" placeholder="04:00">
                    </div>
                </div>
                <div class="field has-addons has-addons-centered">
                    <label class="label is-small">
                        Dias efetivos trabalhando:
                    </label>
                    <div class="control has-icons-left has-icons-right">
                        <input id="txtDias" class="input is-small" type="number" placeholder="5">
                    </div>
                </div>
                <div class="field has-addons has-addons-centered">
                    <label class="label is-small">
                        Dias de Férias por projeto:
                    </label>
                    <div class="control has-icons-left has-icons-right">
                        <input id="txtFerias" class="input is-small" type="number" placeholder="5">
                    </div>
                </div>


                <div class="field has-addons has-addons-centered">
                    <p class="control">
                        <span class="select">
                            <select>
                                <option>R$</option>
                                <option>$</option>
                            </select>
                        </span>
                    </p>
                    <p class="control">
                        <input id="txtTotal" class="input" type="number" placeholder="Valor total do Projeto">
                    </p>
                    <p class="control">
                        <a class="button is-danger">
                            Refazer
                        </a>
                    </p>
                </div>
                <div class="field has-addons has-addons-centered">
                    <label class="label is-medium is-bold">
                        Valor hora:
                    </label>
                    <div class="control has-icons-left has-icons-right is-success">
                        <label class="label is-medium">
                            R$ 0.00
                        </label>
                    </div>
                </div>
            </section>
            <footer class="modal-card-foot">
                <button id="saveCalc" class="button is-primary">Calcular</button>
                <button id="closeCancel" class="button">Cancelar</button>
            </footer>
        </div>
</div>
